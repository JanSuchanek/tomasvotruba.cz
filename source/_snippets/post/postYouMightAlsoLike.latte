<div class="panel">
    <div class="panel-heading">
        <h3>{="post.you_might_also_like"}</h3>
    </div>
    <div class="panel-body">
        {capture $similarPosts}{$post|similarPosts: 3}{/capture}

        {foreach $similarPosts as $similarPost}
            <li>{$similarPost['title']}</li>
        {/foreach}
    </div>
</div>
